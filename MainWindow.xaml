<Window x:Class="Group2Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NBA Player Manager" Height="700" Width="1000">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="Auto"/>
            <!-- CRUD -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- ======================== -->
        <!--   NBA HEADER BAR         -->
        <!-- ======================== -->
        <Border Grid.Row="0" Background="#0A3D91" Height="80" Padding="15">
            <DockPanel>

                <!-- NBA Logo -->
                <Image Source="/mnt/data/NBA.png"
                       Height="60"
                       Width="40"
                       Stretch="Uniform"
                       Margin="0,0,15,0"
                       DockPanel.Dock="Left"/>

                <TextBlock Text="NBA Player Manager"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="32"
                           FontWeight="Bold"
                           FontFamily="Impact"/>
            </DockPanel>
        </Border>


        <!-- ======================== -->
        <!--   FILTER PANEL           -->
        <!-- ======================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">

            <StackPanel Margin="5">
                <TextBlock Text="Player ID" />
                <TextBox x:Name="FilterPlayerId" Width="100"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Name" />
                <TextBox x:Name="FilterName" Width="120"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Age" />
                <TextBox x:Name="FilterAge" Width="60"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Team" />
                <TextBox x:Name="FilterTeam" Width="80"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Season" />
                <TextBox x:Name="FilterSeason" Width="60"/>
            </StackPanel>

            <Button Content="Apply Filters"
                    Width="120"
                    Margin="15,0,0,0"
                    Background="#0A3D91"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="ApplyFilters_Click"/>

            <Button Content="Clear"
                    Width="80"
                    Margin="5,0,0,0"
                    Background="#C8102E"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="ClearFilters_Click"/>

        </StackPanel>


        <!-- ======================== -->
        <!--   CRUD PANEL             -->
        <!-- ======================== -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">

            <StackPanel Margin="5">
                <TextBlock Text="Player ID"/>
                <TextBox x:Name="PlayerIdBox" Width="100"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Name"/>
                <TextBox x:Name="PlayerNameBox" Width="140"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Age"/>
                <TextBox x:Name="AgeBox" Width="60"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Team"/>
                <TextBox x:Name="TeamBox" Width="80"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Season"/>
                <TextBox x:Name="SeasonBox" Width="60"/>
            </StackPanel>

            <StackPanel Margin="10,0,0,0" Orientation="Horizontal" VerticalAlignment="Bottom">

                <Button Content="Add" Width="70" Margin="5"
                        Background="#0A3D91" Foreground="White"
                        FontWeight="Bold"
                        Click="AddPlayer_Click"/>

                <Button Content="Update" Width="70" Margin="5"
                        Background="#0A3D91" Foreground="White"
                        FontWeight="Bold"
                        Click="UpdatePlayer_Click"/>

                <Button Content="Delete" Width="70" Margin="5"
                        Background="#C8102E" Foreground="White"
                        FontWeight="Bold"
                        Click="DeletePlayer_Click"/>

            </StackPanel>
        </StackPanel>


        <!-- ======================== -->
        <!--   THEMED PLAYER GRID     -->
        <!-- ======================== -->
        <DataGrid x:Name="PlayersGrid"
                  Grid.Row="3"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  MouseDoubleClick="PlayersGrid_MouseDoubleClick"
                  SelectionChanged="PlayersGrid_SelectionChanged"
                  AlternatingRowBackground="#F2F2F2"
                  RowBackground="White"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  ColumnHeaderHeight="40">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#0A3D91"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontFamily" Value="Impact"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PlayerKey}" Visibility="Collapsed"/>
                <DataGridTextColumn Binding="{Binding PlayerId}" Header="Player ID" Width="140"/>
                <DataGridTextColumn Binding="{Binding Player1}" Header="Name" Width="230"/>
                <DataGridTextColumn Binding="{Binding Age}" Header="Age" Width="80"/>
                <DataGridTextColumn Binding="{Binding Team}" Header="Team" Width="100"/>
                <DataGridTextColumn Binding="{Binding Season}" Header="Season" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
